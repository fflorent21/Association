{% if app.user %}
    {% if article.alreadyLike %}
        <a href="{{ path('del_likes', { 'id': article.id }) }}" class="card-link" tabindex="0">
            <i class="fas fa-heart"></i>
        </a>
    {% else %}
        <a href="{{ path('add_likes', { 'id': article.id }) }}" class="card-link" tabindex="0">
            <i class="far fa-heart"></i>
        </a>
    {% endif %}
{% else %}
    <a href="{{ path('app_login') }}" class="card-link" tabindex="0">
        <i class="far fa-heart"></i>
    </a>
{% endif %}