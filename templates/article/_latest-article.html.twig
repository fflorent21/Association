    <section class="latest_article">
        
        <div class="d-flex justify-content-between align-items-center my-3">
            
            <h2>Derniers articles :</h2>
            
            <a href="{{ path('app_home')}}">Tous les articles :</a>

        </div>

        <div class="d-flex flex-column flex-lg-row">
        
            {% for article_item in latest_article %}

                <a href="{{ path('article_show', {'id': article_item.id}) }}" class="text-decoration-none text-reset">
                    
                    <div class="flex-grow-1 card border-secondary mb-2 mr-2">
                       
                        <div class="card-header">{{ article_item.title|slice(0,20) ~ '...' }}</div>
                        
                        <div class="card-body">
                            
                            <img class="img-fluid rounded" src="{{ asset('uploads/images/' ~ article_item.image) }}">
                            
                            <h6 class="mt-1">Cat√©gorie :</h6>
                            
                            <h6 class="mb-1 text-secondary">{{ article_item.category.name}}</h6>

                        </div>

                    </div>
                </a>

            {% endfor %}

        </div>

    </section>